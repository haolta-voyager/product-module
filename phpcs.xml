<?xml version="1.0"?>
<ruleset name="VOYAGER INC. Standards">
    <description>VOYAGER INC. PHP Coding Standards (PSR-12)</description>

    <rule ref="PSR12"/>

    <file>app</file>
    <file>routes</file>
    <file>config</file>
    <file>tests</file>

    <exclude-pattern>vendor/</exclude-pattern>
    <exclude-pattern>storage/</exclude-pattern>
    <exclude-pattern>bootstrap/cache/</exclude-pattern>

    <arg name="extensions" value="php"/>
    <exclude-pattern>*.blade.php</exclude-pattern>
    <arg value="spn"/>
    <arg name="colors"/>\
</ruleset>